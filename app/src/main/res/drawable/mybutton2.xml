<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke android:width="1dip" android:color="#1B00CF" />
            <gradient android:angle="-90" android:startColor="#1D00DF" android:endColor="#3E3E3E"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1B00CF" />
            <solid android:color="#BDBDBD"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#130062" />
            <gradient android:angle="-90" android:startColor="#130062" android:endColor="#656565" />
        </shape>
    </item>
</selector>