<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/colorgrey"
    tools:context="com.shouvik.tryprojectalarmgps.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:textColor="#ebfaeb"
        android:background="#372492"
        android:text="L O C A T I O N"
        android:layout_alignParentTop="true"
        android:id="@+id/textViewLoc"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textViewLoc">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout0"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:weightSum="8">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
                    <Button
                        android:text="Set Phone Number"
                        android:id="@+id/setButton"
                        android:textAllCaps="false"
                        android:textSize="20dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/mybutton" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_below="@+id/layout1"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:weightSum="2"
                    android:layout_weight="2">

                    <LinearLayout
                        android:id="@+id/layout21"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp">
                        <Button
                            android:text="Start Fetching\nLocation"
                            android:id="@+id/startButton"
                            android:textAllCaps="false"
                            android:textSize="20dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:padding="10dp"
                            android:textColor="#ffffff"
                            android:background="@drawable/mybutton2" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout22"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp">
                        <Button
                            android:id="@+id/stopButton"
                            android:text="Stop Fetching Location"
                            android:textAllCaps="false"
                            android:textSize="20dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:padding="10dp"
                            android:textColor="#ffffff"
                            android:background="@drawable/mybutton2" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_below="@+id/layout2"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:weightSum="2"
                    android:layout_weight="2">

                    <LinearLayout
                        android:id="@+id/layout31"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp">
                        <Button
                            android:id="@+id/startRepeatingButton"
                            android:text="Start Sending\nPeriodic SMS"
                            android:textAllCaps="false"
                            android:textSize="20dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:padding="10dp"
                            android:textColor="#ffffff"
                            android:background="@drawable/mybutton3"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout32"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp">
                        <Button
                            android:id="@+id/stopRepeatingButton"
                            android:text="Stop Sending\nPeriodic SMS"
                            android:textAllCaps="false"
                            android:textSize="20dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:padding="10dp"
                            android:textColor="#ffffff"
                            android:background="@drawable/mybutton3" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout4"
                    android:layout_below="@+id/layout3"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/sendButton"
                        android:text="Send SMS Now"
                        android:textAllCaps="false"
                        android:textSize="20dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/mybutton4"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout5"
                    android:layout_below="@+id/layout4"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:weightSum="2"
                    android:layout_weight="2">

                    <LinearLayout
                        android:id="@+id/layout51"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp">
                        <Button
                            android:id="@+id/showButton"
                            android:textAllCaps="false"
                            android:textSize="20dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:padding="10dp"
                            android:textColor="#ffffff"
                            android:background="@drawable/mybutton5"
                            android:text="Show Phone\nNumber" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout52"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp">
                        <Button
                            android:id="@+id/useHow"
                            android:textAllCaps="false"
                            android:textSize="20dp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:padding="10dp"
                            android:textColor="#ffffff"
                            android:background="@drawable/mybutton5"
                            android:text="How to Use\nThe App" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>